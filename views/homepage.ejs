<%- include('includes/head.ejs') %>
<body>

<%- include('includes/nav.ejs') %>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-12">

<div class="home-course-title" id="title2"> 
    Course list 
</div>

     <% 
     
     if(courses.length)  { %> 
        <div class="row">

        <% for(let course of courses)  { %>
            <div class="col-md-3">

                <div class="course">
                    <h3> <%= course.coursename %> </h3>
                    <hr>
                    <p> Duration: <%= course.courseduration %>  </p>
                    <p> Fees: <%= course.coursefees%>  </p>
                    <div class="my-2">

                        
                <a href="/courses/edit/<%= course.id%>" class="btn btn-primary"> Edit</a>
                    
                <a href="/courses/delete/<%= course.id%>" class="btn btn-success"> Delete</a>
                    
    
                    </div>
                </div>
            </div>
        <% } %> 
    </div>
        <% }  else { %>
    <div> No course available </div>
    <% } %>    
    
         </div>
        </div>
     </div>

</main>
</body>
</html>