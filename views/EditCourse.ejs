<%- include('includes/head.ejs') %>

<body>

    <%- include('includes/nav.ejs') %>
     <main> 
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <div class="edit-course-title" id="title3"> 
                        Edit course 
                   </div> 

        <form method="POST" action="/courses/edit/<%= Course.id %>">

          <div class="edit-course-name">     
            <label for="coursename"> <b> Course Name </b> </label>
            <input type="text" class="form-control" name="coursename" 
            value="<%= edit ? Course.coursename : '' %>" /> 

            </div>

            <div class="edit-course-duration">   
            <label for="courseduration"> <b> Course Duration </b> </label>
            <input type="number" class="form-control" name="courseduration" 
            value="<%= edit ? Course.courseduration : '' %>"/>
            </div>

            <div class="edit-course-fees">   
            <label for="coursefees"> <b> Course Fees </b> </label>
            <input type="text" class="form-control" name="coursefees"
            value="<%= edit ? Course.coursefees : '' %>" /> 
            </div>
            
            <div class="btn-add" id="btn-edit"> 
                <input type="submit" class="btn btn-danger" value="Submit" > 
            </input>

            </div>
        
         </form>
    </div>
</div>
</div>
</main>

</body>
</html>